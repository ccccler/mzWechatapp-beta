.container {
  padding-bottom: 120rpx;
  min-height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  background-size: cover;
  background-position: center;
  background-attachment: fixed;
}

.ai-intro {
  padding: 24rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.ai-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 16rpx;
}

.intro-text {
  text-align: center;
  background: rgba(255, 255, 255, 0.9);
  padding: 20rpx;
  border-radius: 16rpx;
}

.greeting {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

.examples-section {
  padding: 32rpx;
  flex: 1;
}

.examples-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  color: #333;
  font-size: 28rpx;
}

.refresh-btn {
  color: #666;
}

.examples-list {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  overflow: hidden;
}

.example-item {
  padding: 16rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  font-size: 24rpx;
  color: #333;
  line-height: 1.3;
}

.example-item:last-child {
  border-bottom: none;
}

.input-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 16rpx;
  background: rgba(255, 255, 255, 0.95);
  display: flex;
  align-items: center;
  gap: 12rpx;
  border-top: 1rpx solid rgba(0, 0, 0, 0.1);
}

.input-tools {
  display: flex;
  align-items: center;
}

.tool-btn {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(0, 0, 0, 0.05);
  border-radius: 50%;
  padding: 12rpx;
}

.tool-btn image {
  width: 32rpx;
  height: 32rpx;
}

.tool-btn:active {
  background: rgba(0, 0, 0, 0.1);
}

.input-box {
  flex: 1;
  height: 72rpx;
  padding: 0 24rpx;
  font-size: 26rpx;
  background: #f5f5f5;
  border-radius: 36rpx;
}

.send-btn {
  width: 72rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  background: #1677ff;
  color: #fff;
  border-radius: 36rpx;
  font-size: 28rpx;
  padding: 0;
  flex-shrink: 0;
}

.custom-send-btn {
  width: 72rpx !important;
  height: 72rpx !important;
  line-height: 72rpx !important;
  text-align: center;
  background: #1677ff !important;
  color: #fff;
  border-radius: 36rpx;
  font-size: 28rpx;
  padding: 0 !important;
  flex-shrink: 0;
}

.loading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.loading-dots {
  display: flex;
  gap: 4rpx;
}

.dot {
  width: 6rpx;
  height: 6rpx;
  background: #fff;
  border-radius: 50%;
  animation: dot-animation 1.4s infinite ease-in-out;
}

.dot:nth-child(2) { animation-delay: 0.2s; }
.dot:nth-child(3) { animation-delay: 0.4s; }

@keyframes dot-animation {
  0%, 80%, 100% { transform: scale(0); }
  40% { transform: scale(1); }
}

.recent-chats {
  padding: 32rpx;
  background: rgba(255, 255, 255, 0.9);
  margin: 20rpx 32rpx;
  border-radius: 16rpx;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 24rpx;
  font-weight: 500;
}

.chat-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.chat-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 12rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  height: 100rpx;
  box-sizing: border-box;
}

.chat-info {
  flex: 1;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
}

.chat-time {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.chat-preview {
  font-size: 24rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 1.3;
  max-height: 2.6em;
}

.chat-arrow {
  color: #999;
  font-size: 24rpx;
  margin-left: 16rpx;
  flex-shrink: 0;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(0, 0, 0, 0.05);
  border-radius: 50%;
}

/* 卡片容器 */
.cards-container {
  padding: 0 32rpx 24rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 通用卡片样式 */
.card {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 16rpx;
  overflow: hidden;
}

.card-inner {
  padding: 16rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
  padding-bottom: 12rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.card-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 示例问题样式 */
.examples-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.example-item {
  padding: 16rpx;
  background: rgba(255, 255, 255, 0.877);
  border-radius: 12rpx;
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  font-size: 24rpx;
  color: #333;
  transition: all 0.3s ease;
  line-height: 1.3;
}

.example-item:active {
  background: rgba(0, 0, 0, 0.05);
}

.refresh-btn {
  padding: 8rpx 24rpx;
  background: rgba(0, 0, 0, 0.05);
  border-radius: 24rpx;
  font-size: 24rpx;
  color: #666;
}

.refresh-btn:active {
  background: rgba(0, 0, 0, 0.1);
}

.face-analysis-section {
  padding: 15px;
}

.face-analysis-btn {
  background-color: #07c160;
  color: white;
  border-radius: 5px;
  padding: 10px;
  width: 100%;
  text-align: center;
  font-size: 16px;
}

.face-analysis-btn:active {
  opacity: 0.8;
}

/* 底部输入区域 */
.bottom-input {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #f5f5f5;
  padding: 20rpx;
  border-top: 1rpx solid #e5e5e5;
}

.input-wrapper {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 36rpx;
  padding: 0 10rpx;
}

.camera-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  padding: 10rpx;
}

.camera-btn image {
  width: 44rpx;
  height: 44rpx;
}

.message-input {
  flex: 1;
  height: 72rpx;
  font-size: 28rpx;
  padding: 0 20rpx;
  background-color: transparent;
}

.send-btn {
  width: 120rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  border-radius: 32rpx;
  background-color: #1890ff;
  color: #fff;
  font-size: 28rpx;
  margin: 0;
  padding: 0;
}

.loading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

.loading-dots {
  display: flex;
  gap: 4rpx;
}

.dot {
  width: 6rpx;
  height: 6rpx;
  background-color: #1890ff;
  border-radius: 50%;
  animation: bounce 0.5s infinite alternate;
}

.dot:nth-child(2) {
  animation-delay: 0.2s;
}

.dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes bounce {
  from {
    transform: translateY(0);
  }
  to {
    transform: translateY(-6rpx);
  }
}