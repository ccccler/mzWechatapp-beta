.chat-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #ededed;
}

.message-list {
  flex: 1;
  padding: 20rpx;
}

.messages-wrapper {
  padding-bottom: 20rpx;
}

.message-item {
  display: flex;
  margin-bottom: 30rpx;
  align-items: flex-start;
}

/* 用户消息靠右 */
.message-item.user {
  flex-direction: row-reverse;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.avatar image {
  width: 100%;
  height: 100%;
}

.bubble {
  position: relative;
  padding: 20rpx 24rpx;
  border-radius: 10rpx;
  font-size: 30rpx;
  line-height: 1.5;
  max-width: 60%;
  word-wrap: break-word;
  margin: 0 20rpx;
}

.bubble.assistant {
  background-color: #ffffff;
}

.bubble.user {
  background-color: #95ec69;
}

/* 气泡尖角 */
.bubble.assistant::before {
  content: '';
  position: absolute;
  left: -16rpx;
  top: 20rpx;
  border: 8rpx solid transparent;
  border-right-color: #ffffff;
}

.bubble.user::before {
  content: '';
  position: absolute;
  right: -16rpx;
  top: 20rpx;
  border: 8rpx solid transparent;
  border-left-color: #95ec69;
}

.input-area {
  padding: 20rpx;
  background-color: #f7f7f7;
  border-top: 1rpx solid #e5e5e5;
}

.input-wrapper {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-radius: 8rpx;
  padding: 0 20rpx;
}

.camera-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.camera-btn image {
  width: 40rpx;
  height: 40rpx;
}

.message-input {
  flex: 1;
  height: 72rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
  background: transparent;
}

.send-btn {
  margin: 0;
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  color: #999;
  background: transparent;
  border: none;
}

.send-btn.active {
  color: #07c160;
}

.send-btn::after {
  border: none;
}

/* 适配底部安全区域 */
.input-area {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.loading {
  text-align: center;
  padding: 20rpx;
  display: flex;
  justify-content: center;
}

.loading-dots {
  display: flex;
  gap: 8rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  background-color: #1890ff;
  border-radius: 50%;
  animation: bounce 0.5s infinite alternate;
  opacity: 0.7;
}

.dot:nth-child(2) {
  animation-delay: 0.2s;
}

.dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes bounce {
  from {
    transform: translateY(0);
    opacity: 0.7;
  }
  to {
    transform: translateY(-6rpx);
    opacity: 1;
  }
}

.loading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

.message {
  margin: 20rpx 0;
  padding: 20rpx;
  border-radius: 10rpx;
  max-width: 80%;
}

.user {
  background-color: #007AFF;
  color: white;
  align-self: flex-end;
  margin-left: auto;
}

.ai {
  background-color: #F0F0F0;
  color: #333;
  align-self: flex-start;
}

.streaming {
  position: relative;
}

.typing-indicator {
  display: inline-block;
  animation: typing 1s infinite;
}

@keyframes typing {
  0% { opacity: 0.3; }
  50% { opacity: 1; }
  100% { opacity: 0.3; }
}